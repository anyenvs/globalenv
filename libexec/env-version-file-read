#!/usr/bin/env bash
# Usage: helmfilenv version-file-read <file>
set -e
[ -n "$ENV_DEBUG" ] && set -x

VERSION_FILE="$1"
binary=${binary//env/}

if [ -e "$VERSION_FILE" ]; then
  # Read the first word from the specified version file. Avoid reading it whole.
  IFS="${IFS}"$'\r'
  words=( $(cut -b 1-1024 "$VERSION_FILE") )
  #words=( $(cut -d- -f2 "$VERSION_FILE") )
  words=( $( grep ${binary} "$VERSION_FILE" |cut -d- -f2 ) )
  version="${words[0]}"

  if [ -n "$version" ]; then
    echo "$version"
    exit
  fi
fi

exit 1
